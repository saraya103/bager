<main class="main">
  <div class="inner">
    <h1><%= "#{@note.reserve_name}" %></h1>
    <% if @reserves == [] %>
      <div class="none_item">
        <p>予約アイテムがありません。</p>
      </div>
    <% else %>
    <table class="pc_table">
      <thead>
        <tr>
          <th>次回追加日</th>
          <th>画像</th>
          <th>名前</th>
          <th>金額</th>
          <th>個数</th>
          <th>条件</th>
          <th>備考</th>
          <th>間隔</th>
          <th>周期</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <div>
          <%= render partial: 'reserve', collection: @reserves %>
        </div>
      </tbody>
    </table>
            <table class="sp_table">
      <thead>
        <tr>
          <th>画像</th>
          <th colspan="2">情報</th>
        </tr>
      </thead>
      <tbody>
        <div>
          <%= render partial: 'spreserve', collection: @reserves %>
        </div>
      </tbody>
    </table>
    <% end %>
  </div>
</main>
<div class="main">
  <div class="inner">
    <% if @reserves == [] %>
      <h2 class="page-heading">まずはアイテム登録をしましょう</h2>
      <div class="greeting">
        <%= link_to new_note_item_path(@note.character) do %>
          <input type="submit" value="アイテム登録" class="sub__btn form__btn">
        <% end %>
      </div>
    <% else %>
      <%= render partial: "form", locals: { note: @note, reserve: @reserve} %>
    <% end %>
  </div>
</div>