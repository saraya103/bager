<%= form_with model: [note, item], local: true do |f|%>

  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, id:"item_name" %>
  </div>

  <div class="field">
    <%= f.label :price, "価格" %><br />
    <%= f.text_field :price, class: :form__text, id:"item_price" %>
  </div>

  <div class="field">
    <%= f.label :count, "個数" %><br />
    <%= f.text_field :count, class: :form__text, id:"item_count" %>
  </div>

  <div class="field">
    <%= f.label :condition, "条件" %><br />
    <%= f.text_field :condition, class: :form__text, id:"item_condition" %>
  </div>

    <div class="field">
    <%= f.label :memo, "備考" %><br />
    <%= f.text_area :memo, class: :form__text, id:"item_memo" %>
  </div>

   <div class="field">
    <%= f.label :image, "アイテムの画像" %><br />
    <%= f.file_field :image, id:"item_image" %>
  </div>
  <input name="note_char" type="hidden" value=<%= note.character %>>
  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>