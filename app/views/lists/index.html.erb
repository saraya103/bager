<main class="main">
  <div class="inner">
  <h1><%= "#{@note.list_name}" %></h1>
    <table class="pc_table">
      <thead>
        <tr>
<%#       <th>選択</th> %>
          <th>画像</th>
          <th>名前</th>
          <th>金額</th>
          <th>個数</th>
          <th>条件</th>
          <th>備考</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <div>
          <%= render partial: 'list', collection: @lists %>
        </div>
      </tbody>
    </table>
        <table class="sp_table">
      <thead>
        <tr>
<%#       <th>選択</th> %>
          <th>画像</th>
          <th colspan="2">情報</th>
        </tr>
      </thead>
      <tbody>
        <div>
          <%= render partial: 'splist', collection: @lists %>
        </div>
      </tbody>
    </table>
  </div>
</main>

<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規リスト登録</h2>
      <%=form_with model: [@note, @list], local: true do |f|%>
      <select name="item_id">
        <option value="">登録するアイテムを選択してください</option>
          <% Item.where(note_id: @note.id).each do |item| %>
          <option value=<%= item.id %>><%= item.name %></option>
          <% end %>
      </select>
      <input name="note_char" type="hidden" value=<%= @note.character %>>
      <div class="actions">
        <%= f.submit class: 'chat-room-form__action-btn'%>
          <%#  <%= render partial: "form", locals: { note: @note, item: @item } %>
      </div>
    </div>
    <% end %>
  </div>
</div>