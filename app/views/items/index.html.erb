<main class="main">
  <div class="inner">
  <h1><%= "#{@note.item_name}" %></h1>
    <table>
      <thead>
        <tr>
          <th>選択</th>
          <th>画像</th>
          <th>名前</th>
          <th>金額</th>
          <th>個数</th>
          <th>条件</th>
          <th>備考</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <div>
          <%= render partial: 'item', collection: @items %>
        </div>
      </tbody>
    </table>
        <% if user_signed_in? %>
      <div class="greeting">
        <%= link_to "アイテム登録", new_note_item_path(@note.character), class: :greeting__link%>
      </div>
    <% end %>
  </div>
</main>
